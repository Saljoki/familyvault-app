# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=familyvault
DB_USER=familyvault
DB_PASSWORD=familyvault

# Storage (S3-compatible)
# For local development with MinIO:
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=familyvault
STORAGE_REGION=us-east-1

# For Cloudflare R2:
# STORAGE_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com
# STORAGE_ACCESS_KEY=<your-r2-access-key>
# STORAGE_SECRET_KEY=<your-r2-secret-key>
# STORAGE_BUCKET=familyvault
# STORAGE_REGION=auto

# For AWS S3:
# STORAGE_ENDPOINT=https://s3.us-east-1.amazonaws.com
# STORAGE_ACCESS_KEY=<your-aws-access-key>
# STORAGE_SECRET_KEY=<your-aws-secret-key>
# STORAGE_BUCKET=familyvault
# STORAGE_REGION=us-east-1

# For Backblaze B2:
# STORAGE_ENDPOINT=https://s3.us-west-004.backblazeb2.com
# STORAGE_ACCESS_KEY=<your-b2-key-id>
# STORAGE_SECRET_KEY=<your-b2-application-key>
# STORAGE_BUCKET=familyvault
# STORAGE_REGION=us-west-004

# JWT
JWT_SECRET=change-this-to-a-very-long-random-string-at-least-256-bits

# Server
PORT=8080
